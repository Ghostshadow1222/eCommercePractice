@model LoginViewModel
@{
	ViewData["Title"] = "Member Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h1 class="card-title mb-0 text-center">Log In</h1>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label class="form-label" asp-for="UsernameOrEmail"></label>
                        <input class="form-control" placeholder="Username or Email" asp-for="UsernameOrEmail" />
                        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label" asp-for="Password"></label>
                        <input class="form-control" placeholder="Password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <small class="text-muted">
                    Don't have an account? <a asp-controller="Member" asp-action="Register">Register here</a>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}