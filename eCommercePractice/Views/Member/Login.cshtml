@model LoginViewModel
@{
	ViewData["Title"] = "Member Login";
}

<h1>Log in to your account</h1>

<form method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="mb-3">
		<label class="form-label" asp-for="UsernameOrEmail"></label>
		<input class="form-control" placeholder="Username or Email" asp-for="UsernameOrEmail" class="form-control" />
		<span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label class="form-label" asp-for="Password"></label>
		<input class="form-control" placeholder="Password" asp-for="Password" class="form-control" />
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	
	<input type="submit" value="Log In" class="btn btn-primary" />
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}