@model Product
@{
	ViewData["Title"] = "Create new Product";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h1 class="card-title mb-0 text-center">Create New Product</h1>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter product title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Create Product</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Product" asp-action="Index" class="btn btn-link">Back to Product Listings</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}